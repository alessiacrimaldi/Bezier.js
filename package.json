{
  "name": "bezierjs",
  "type": "module",
  "exports": {
    "./calculation": {
      "import": "./dist/calculation.js",
      "require": "./dist/calculation.cjs"
    },
    "./drawing": {
      "import": "./dist/drawing.js",
      "require": "./dist/drawing.cjs"
    },
    "./interaction": {
      "import": "./dist/interaction.js",
      "require": "./dist/interaction.cjs"
    }
  },
  "files": [
    "dist/*"
  ],
  "devDependencies": {
    "vite": "4.3.1",
    "copyfiles": "^2.4.1",
    "onchange": "^7.1.0"
  },
  "scripts": {
    "build": "vite build && npx copyfiles -f dist/**/* docs/dist",
    "watch": "onchange 'lib/*.js' -- npm run build"
  }
}
